<div class="modal-header"
     data-channel="cancel_notifications"
     data-role="driver"
     data-ride-id="<%= @drive.id %>">
  You're all set to go!
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<div class="modal-body">
  <%= @rider.name %> would wait you at <%= @drive.starting_address %>!
</div>
<div class="modal-footer">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Send a message
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <div class="container">
      <%= form_tag user_message_path(id: @rider.id), method: :post,
                   html: { class: "form-group" } do %>
        <%= text_area_tag "content", nil, rows: 3, class: "form-control" %>
        <div class="row justify-content-end" style="margin-right: 0; margin-top: 0.5rem;">
          <%= submit_tag "Send", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Finish Ride",
              ride_path(rid: @drive.id),
              method: :patch, remote: true,
              class: "btn btn-primary" %>
  <%= link_to "Cancel Ride",
              ride_path(rid: @drive.id, canceled_by: 1),
              method: :delete, remote: true,
              data: { confirm: "Are you sure? The rider is waiting you" } %>
</div>
