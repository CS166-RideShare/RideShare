<script>
  var userRole = document.getElementById('user-role')
  var roleField = document.getElementById('ride')

  function changeUserRole() {
    if(userRole.checked) {
      roleField.value="drive";
    } else {
      roleField.value="request";
    }
  }

  <% if @role=='driver' %>
    userRole.checked = true;
  <% end %>
</script>
