 <div class="col-md-8 offset-md-2">
     <div class="card">
       <div class="card-body">
         <div class="col">
           <% trips = @user.trip_history %>
           <% if trips.size == 0 %>
             <h1>
               No trip history.
             </h1>
           <% end %>
           <table class="table" id="trip_history_table">
             <thead>
             <tr>
               <th scope="col">#</th>
               <th scope="col">Time</th>
               <th scope="col">Start</th>
               <th scope="col">End</th>
             </tr>
             </thead>
             <tbody>
             <% count = 0 %>
             <% trips.each do |trip| %>
               <tr>
                 <% count = count + 1%>
                 <th scope="row"> <%=count%></th>
                 <td><%= trip.updated_at.to_formatted_s(:short) %></td>
                 <% if trip.canceled_by %>
                   <td>Canceled</td>
                   <td>Canceled</td>
                 <% else %>
                   <td><%= trip.short_starting %></td>
                   <td><%= trip.short_destination %></td>
                 <% end %>
               </tr>
             <% end %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
  </div>
