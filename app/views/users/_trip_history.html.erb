<div class="row">
  <div class="col-md-6 offset-md-3">

    <div class="row">
      <div class="col-md-12 offset-md-2">
        <% trips = @user.trip_history %>
        <% if trips.size == 0 %>
          <h1>
            No trip history.
          </h1>
        <% end %>
        <div class="container">
          <table class="table table-striped">
            <thead>
            </thead>
            <tbody>
              <% trips.each do |trip| %>
                <tr>
                  <%= trip.pickup_start.to_s[0..-10] %>
                  <% if trip.canceled_by %>
                    Canceled
                  <% else %>
                    <%= trip.short_starting %>
                    <%= trip.short_destination %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
