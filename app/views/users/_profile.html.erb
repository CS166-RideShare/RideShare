<!DOCTYPE html>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="row">
      <div class="col-md-4 offset-md-2">
        <% if @user.profile_image.attached? %>
          <%= image_tag(@user.profile_image, :size => "200x200") %>
        <% else %>
          <%= image_tag('user_default.png', :size => "200x200") %>
        <% end %>
      </div>
      <div class="col-md-4">
        <p class="my-3 font-weight-bold" style="font-size: 300%"><%= best_in_place @user, :name, :as => :input%></p>
        <div class="my-3"><%= render partial: "upload_button" %></div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 offset-md-2">

        <p class="mt-1">Email</p>
        <p class="mt-1">Phone</p>
        <p class="mt-1">Emergency Contact</p>
      </div>
      <div class="col-md-4">

        <p class="bg-secondary text-white mb-3 rounded text-center"><%= best_in_place @user, :email, :as => :input%></p>
        <p class="bg-secondary text-white mb-3 rounded text-center">
          <%= best_in_place( @user, :phone_number, :as => :input, :place_holder => "Click to add!")%>

        </p>
        <p class="bg-secondary text-white mb-3 rounded text-center">
          <%= best_in_place @user, :emergency_contact, :as => :input, :place_holder => "Click to add!"%>
        </p>
      </div>
    </div>
  </div>
</div>

