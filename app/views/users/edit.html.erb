<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<%= semantic_form_for @user, method: :patch do |f| %>
  <%= f.inputs :name, :email, :is_driver %>
  <%= f.actions :submit, :cancel %>
<% end %>
