<!DOCTYPE html>
<div class="row profile mx-0" id="profile_background">
  <%= render 'upload_button' %>
  <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h2>Hi, <%=@user.name %></h2>
          <hr>
          <div class="row">
            <div class="col-7">
              <% if @user.profile_image.attached? %>
                <button type="button" class="btn btn-outline-light user_avatar" data-toggle="modal" data-target="#exampleModalCenter">
                  <%= image_tag(@user.profile_image, :size => "400x400", :class => "user_avatar") %>
                </button>
              <% else %>
                <button type="button" class="btn btn-outline-light user_avatar" data-toggle="modal" data-target="#exampleModalCenter">
                  <%= image_tag('user_default.png', :size => "400x400", :class => "user_avatar") %>
                </button>
              <% end %>
            </div>
            <div class="col-5">
              <table class="table">
                <tr>
                  <thead>
                  <th scope="col">Email</th>
                  </thead>
                  <td><%= best_in_place @user, :email, :as => :input%></td>
                </tr>
              </table>

              <table class="table">
                <thead>
                <tr>
                  <th scope="col">Phone</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <th scope="col"><%= best_in_place( @user, :phone_number, :as => :input, :place_holder => "Click to add!")%></th>
                </tr>
                </tbody>
              </table>

              <table class="table">
                <thead>
                <tr>
                  <th scope="col">Emergency Contact</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <th scope="col"><%= best_in_place @user, :emergency_contact, :as => :input, :place_holder => "Click to add!"%></th>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
